.roll-wrapper
    padding: 3px

/* do some css trick to center the content */
.roll-item
    width: 100%
    height: 100%
    flex: 1 0 auto
    text-align: center
    border-radius: 5px
    overflow: hidden
    border: #b3e5fc solid 2px

.roll-item:before
    content:''
    float:left
    padding-top:100%

.roll-item .text
    padding-top: calc(50% - 10px)
    position: relative
    word-wrap: break-word
    z-index: 1

.checkmark
    height: 100%
    margin-left: 30%
    margin-top: -20%
    -webkit-transform: rotate(45deg)
    transform: rotate(45deg)
    position: relative
    z-index: 0

.checkmark:before
    content:""
    position: absolute
    width: 14px
    height: 56px
    top: 0px
    left: 21px
    background-color: #bfebff
    border-radius: 6px

.checkmark:after
    content:""
    position: absolute
    width: 28px;
    height: 14px;
    top: 42px;
    left: 0;
    background-color: #bfebff
    border-radius: 6px


