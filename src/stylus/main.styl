/* Colorful background */
.theme-wrapper
    height: 100%
    width: 100%
    position: fixed

svg.bg-mask
    height: calc(100% + 40px)
    width: calc(100% + 40px)
    position: absolute

.gradient-bg, .gradient-fg
    transition: fill .2s linear
    will-change: fill

.gradient-fg
    fill: #56c9fe

.gradient-bg
    fill: #2d57d7

.dawn .gradient-fg
    fill: #d3a296

.dawn .gradient-bg
    fill: #737ba9

.golden-hour-end .gradient-fg
    fill: #5ed0ed

.golden-hour-end .gradient-bg
    fill: #5982b4

.golden-hour .gradient-bg
    fill: #833960

.golden-hour .gradient-fg
    fill: #5dc2e3

.sunset .gradient-fg
    fill: #e9aa58

.sunset .gradient-bg
    fill: #b04491

.dusk .gradient-fg
    fill: #f4b18a

.dusk .gradient-bg
    fill: #2286d2

.night .gradient-fg
    fill: #2d70bc

.night .gradient-bg
    fill: #061527

#mountain
    display: none
    height: 100%
    width: 100%
    z-index: 0
    position: fixed
    transition: all .3s ease-in
    background-color: rgba(0, 0, 0, .4)
    -webkit-clip-path: polygon(54% 41%, 60% 48%, 71% 34%, 100% 63%, 100% 100%, 0 100%, 0 60%, 23% 28%, 44% 54%)
    clip-path: polygon(54% 41%, 60% 48%, 71% 34%, 100% 63%, 100% 100%, 0 100%, 0 60%, 23% 28%, 44% 54%)

#mountain.horizon
    -webkit-clip-path: polygon(53% 320px, 70% 320px, 86% 320px, 100% 320px, 100% 100%, 0 100%, 0 320px, 18% 320px, 35% 320px)
    clip-path: polygon(53% 320px, 70% 320px, 86% 320px, 100% 320px, 100% 100%, 0 100%, 0 320px, 18% 320px, 35% 320px)

@media screen and (max-width:600px)
    #mountain
        -webkit-clip-path: polygon(77% 44%, 100% 57%, 100% 57%, 100% 57%, 100% 100%, 0 100%, 0 50%, 26% 33%, 56% 56%)
        clip-path: polygon(77% 44%, 100% 57%, 100% 57%, 100% 57%, 100% 100%, 0 100%, 0 50%, 26% 33%, 56% 56%)
    #mountain.horizon
        -webkit-clip-path: polygon(53% 185px, 70% 185px, 86% 185px, 100% 185px, 100% 100%, 0 100%, 0 185px, 18% 185px, 35% 185px)
